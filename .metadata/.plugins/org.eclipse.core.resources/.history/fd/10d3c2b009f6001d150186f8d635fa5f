function searchID() {
	let doc = document.getElementById('test');
	let str = doc.innerHTML;
	doc.innerHTML =  str + '<br/>&nbsp;&nbsp;&nbsp;getElementById() 함수는 DOM에서 id 속성을 탐색한다.';
	doc.style.backgroundColor = 'lavender';
	
}

