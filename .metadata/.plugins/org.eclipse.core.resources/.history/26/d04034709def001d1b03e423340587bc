	/* div 태그 수평 배치 - 1 */
	.container1 {
		border: 3px solid red;
		font-size: 0px;
	}	
	.container1 > .item1 {
		width: 100px;
		height: 100px;
		border: 3px solid gray;
		border-radius: 10px;
		justify-content: center;
		align-items: center;
		/* block 요소는 수평으로 정렬할 수 없으므로 display: inline-block으로 지정한다. */
		display: inline-block;
	}
	/* div 태그 수평 배치 - 2 */
	.container2 {
		border: 3px solid red;
		font-size: 0px;
	}	
	.container2 > .item2 {
		width: 100px;
		height: 100px;
		border: 3px solid gray;
		border-radius: 10px;
		align-items: center;
		float-size: 25pt;
		/* float 속성을 지정해서 요소를 띄우면 컨테이너에 아무것도 없기 때문에 컨테이너 공간이 사라진다. */
		float: left;
	}
</style>
